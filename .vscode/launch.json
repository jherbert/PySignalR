{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "pythonPath": "python",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: example.py",
            "type": "python",
            "request": "launch",
            // On Windows and Python extension 2018.10.1 relying on settings.json activates the
            // virtual environment correctly but does a fully quailifed path to python.exe which
            // seems to make it run outside the context of the virtual environment
            "pythonPath": "python",
            "program": "${workspaceFolder}/example/example.py",
            "console": "integratedTerminal"
        }
    ]
}